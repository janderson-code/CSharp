@page
@model ProjetoAnime.Webapp.MVC.Models.Identidade.UsuarioRegistroViewModel
@{
    Layout = "";
}

<html>
<partial name="_Head"></partial>
<body>
    <main>
        <div class="row">
            <div class="col s12 m6 offset-m3 center-align">
                <div class="card small">
                    @using (Html.BeginForm("Action", "Controller", FormMethod.Post, new { @class = "container" }))
                    {
                        @Html.AntiForgeryToken()

                        <h3>Formulário de Cadastro</h3>
                        <div class="input-field">
                            @Html.TextBoxFor(m => m.Nome, new { id = "Nome", required = "required" })
                            @Html.LabelFor(m => m.Nome)
                        </div>
                        <div class="input-field">
                            @Html.TextBoxFor(m => m.Email, new { id = "Email", required = "required" })
                            @Html.LabelFor(m => m.Email)
                        </div>
                        <div class="input-field">
                            @Html.PasswordFor(m => m.Senha, new { id = "Senha", @class = "validate", required = "required" })
                            @Html.LabelFor(m => m.Senha)
                        </div>
                        <button class="btn waves-effect waves-light blue" type="submit">Enviar</button>
                    }
                </div>
            </div>
        </div>
    </main>
    <partial name="_footer"></partial>
</body>
</html>
